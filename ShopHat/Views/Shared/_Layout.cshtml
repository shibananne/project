    <script>
      
        $(document).ready(function () {
            var isHoveringOnCategoryMain = false;
            var currentHoverTarget = null;

            $(".hover-trigger").hover(
                function () {
                    var target = $(this).data("target");
                    $(target).css("display", "block");
                    $("#opacity-layer").css("display", "block");
                    currentHoverTarget = target;
                },
                function () {
                    if (!isHoveringOnCategoryMain) {
                        var target = $(this).data("target");
                        $(target).css("display", "none");
                        $("#opacity-layer").css("display", "none");
                    }
                }
            );

            $(".category-main").hover(
                function () {
                    isHoveringOnCategoryMain = true;
                    if (currentHoverTarget !== null) {

                        $(currentHoverTarget).css("display", "block");
                        $("#opacity-layer").css("display", "block");
                    }
                },
                function () {
                    isHoveringOnCategoryMain = false;
                    if (currentHoverTarget !== null) {

                        $(currentHoverTarget).css("display", "none");
                        $("#opacity-layer").css("display", "none");
                    }
                }
            );
        });




    </script>
