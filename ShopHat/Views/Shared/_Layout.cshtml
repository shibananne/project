    <script>
        var EventBus = new Vue();
        $(document).ready(function () {
            function truncatePlaceholder(inputElement, maxLength) {
                var placeholderText = inputElement.attr("placeholder");
                if (placeholderText.length > maxLength) {
                    var truncatedText = placeholderText.substring(0, maxLength - 3) + "...";
                    inputElement.attr("placeholder", truncatedText);
                }
            }
            var inputElement = $("#search");
            var maxLength = 62;
            truncatePlaceholder(inputElement, maxLength);
        });
    </script>
